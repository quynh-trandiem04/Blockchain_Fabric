<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action for checking blockchain transactions -->
        <record id="ir_cron_blockchain_tx_checker" model="ir.cron">
            <field name="name">Blockchain Transaction Checker</field>
            <field name="model_id" ref="model_blockchain_tx_checker"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_txs()</field>
            <field name="interval_type">minutes</field>
            <field name="interval_number">5</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
